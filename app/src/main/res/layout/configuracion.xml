<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_configuracion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.versus.tictactoe.Configuracion">


    <RadioButton
        android:text="@string/english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rbEspañol"
        android:layout_alignStart="@+id/rbEspañol"
        android:id="@+id/rbIngles" />

    <RadioButton
        android:text="@string/spanish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:id="@+id/rbEspañol"
        android:layout_below="@+id/tvIdioma"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="@string/sd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbMemory"
        android:layout_alignStart="@+id/cbMemory"
        android:id="@+id/cbSD" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/tvFileName"
        android:layout_alignStart="@+id/cbSD"
        android:layout_marginTop="16dp"
        android:id="@+id/etFileName" />

    <TextView
        android:text="@string/language"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/tvIdioma"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="@string/memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbMemory"
        android:layout_below="@+id/tvUbicacion"
        android:layout_alignStart="@+id/rbIngles"
        android:layout_marginTop="14dp" />

    <Button
        android:text="@string/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:id="@+id/btnSave"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/cbMemory" />

    <Button
        android:text="@string/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBack"
        android:layout_alignBaseline="@+id/btnSave"
        android:layout_alignBottom="@+id/btnSave"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="26dp" />

    <TextView
        android:text="@string/filename"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/tvFileName"
        android:layout_below="@+id/cbSD"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/ubicacion"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/tvUbicacion"
        android:layout_below="@+id/rbIngles"
        android:layout_alignParentStart="true" />
</RelativeLayout>
