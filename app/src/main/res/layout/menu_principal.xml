<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UselessParent"
    android:layout_alignParentTop="true">

    <ImageView
        android:contentDescription="@string/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        app:srcCompat="@mipmap/tic_tac_toe"
        android:id="@+id/ivFoto"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="@string/tictactoe"
        android:textSize="60dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:srcCompat="@mipmap/play"
            android:id="@+id/ibtnPlay"
            android:layout_weight="1"
            android:onClick="goChoose"
            android:layout_gravity="center"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:srcCompat="@mipmap/settings"
            android:id="@+id/ibtnConf"
            android:layout_weight="1"
            android:onClick="goConfig"
            android:layout_gravity="center" />

    </LinearLayout>
</LinearLayout>
